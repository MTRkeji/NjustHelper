/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #dadada;
  padding: 10px;
}
.item{
  width: 100%;
  display: flex;
  justify-content: space-between;
}